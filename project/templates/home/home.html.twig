{% extends 'base.html.twig' %}
{% block body %}
  <div class="container">
    <div class="row">
      {% for articles in article %}
      <div class="col-lg-3 cards">
        <div class="card" style="width: 15rem;">
          <img class="card-img-top" src="{{ asset(articles.thumbnail) }}" alt="thumbnail of an article">
          <div class="card-body">
            <h5 class="card-title">{{ articles.title }}</h5>
            <a href="{{ path('article_page', { 'id' : articles.id }) }}" class="btn btn-primary">Read more...</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
